<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="24dp">

    <!-- Banner del título de la sección con imagen de fondo -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/helpSectionTitleBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/titlesupport"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Título de sección"/>

        <TextView
            android:id="@+id/helpSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Letras con sonido /ei/ / Letters with /ei/ sound"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </FrameLayout>

    <!-- Contenedor del diagrama -->
    <LinearLayout
        android:id="@+id/diagramContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <!-- Contenedor de imágenes secuenciales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp">

    <!-- Imagen principal -->
        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- Descripción de la imagen -->
        <TextView
            android:id="@+id/imageDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción de la imagen actual"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Ultra Compact Audio Player Card - Everything in Single Line -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/audioPlayerCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="40dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="#D4E5ED"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center_vertical">

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/reproduce"
                android:background="@android:color/transparent"
                android:contentDescription="Reproducir/Pausar audio"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_marginEnd="12dp"/>

            <!-- AudioPlayerView integrado (como en ListeningActivity) -->
            <com.example.speak.AudioPlayerView
                android:id="@+id/audioPlayerView"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.8"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- Tiempo actual y total (compacto) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/currentTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/totalTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Speed Indicator -->
            <TextView
                android:id="@+id/speedIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
                android:textColor="#FF9017"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="32dp"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <!-- Botón de configuración -->
            <ImageButton
                android:id="@+id/helpConfigButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/settings"
                android:background="@android:color/transparent"
                android:contentDescription="Configuración de audio"
                android:padding="6dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- Panel de configuración (oculto por defecto) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/voiceTypeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#D4E5ED">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título del selector de voz -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de voz (solo inglés) / Voice Type (English only)"
                android:textColor="#002C4D"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Selector de idioma -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/helpLanguageSpanishButton"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Original"
                    android:textSize="10sp"
                    android:background="@drawable/rounded_background"
                    android:textColor="#002C4D"
                    android:padding="4dp"/>

                <Button
                    android:id="@+id/helpLanguageEnglishButton"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="🇺🇸 English (TTS)"
                    android:textSize="10sp"
                    android:background="@drawable/rounded_background"
                    android:textColor="#002C4D"
                    android:padding="4dp"/>

            </LinearLayout>

            <!-- Grid de botones de tipos de voz - Solo emojis (más grandes) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp">

                <Button
                    android:id="@+id/helpVoiceChildButton"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="👦"
                    android:textSize="32sp"
                    android:background="@android:color/transparent"
                    android:textColor="#002C4D"
                    android:padding="12dp"/>

                <Button
                    android:id="@+id/helpVoiceGirlButton"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="👧"
                    android:textSize="32sp"
                    android:background="@android:color/transparent"
                    android:textColor="#002C4D"
                    android:padding="12dp"/>

                <Button
                    android:id="@+id/helpVoiceWomanButton"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="👩"
                    android:textSize="32sp"
                    android:background="@android:color/transparent"
                    android:textColor="#002C4D"
                    android:padding="12dp"/>

                <Button
                    android:id="@+id/helpVoiceManButton"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="👨"
                    android:textSize="32sp"
                    android:background="@android:color/transparent"
                    android:textColor="#002C4D"
                    android:padding="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp">

        <!-- Imagen de olas de fondo -->
        <ImageView
            android:id="@+id/waves_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Decoración de olas"
            android:scaleType="fitXY"
            android:src="@drawable/big_waves" />

        <!-- Controles del paginador sobre la imagen -->
        <LinearLayout
            android:id="@+id/imagePaginatorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="28dp"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/previousImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/left_arrow"
                android:background="@drawable/circle_background_c"
                android:contentDescription="Imagen anterior" />

            <TextView
                android:id="@+id/imageCounterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_marinablue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/nextImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/right_arrow"
                android:background="@drawable/circle_background_c"
                android:contentDescription="Imagen siguiente" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
