<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_dark">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- BotÃ³n volver y exportar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eBtnReturnMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium">

                <!-- BotÃ³n volver (izquierda) -->
                <LinearLayout
                    android:id="@+id/returnContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/back"
                        android:contentDescription="@string/return_menu"
                        android:layout_marginEnd="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/return_button"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- BotÃ³n Exportar CSV (derecha, alineado perfectamente) -->
                <LinearLayout
                    android:id="@+id/exportButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/export_csv"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Exportar CSV" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exportar CSV"
                        android:textSize="18sp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_small"
                >

                <TextView
                    android:id="@+id/resultTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resultados de PronunciaciÃ³n"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Botones de acciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/continueButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_standard"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Continuar"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/button_outline"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:drawableStart="@android:drawable/ic_media_play"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Tabla de resultados (estructura similar a activity_quiz_history) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/table_background"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:elevation="6dp"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Header fijo (primera fila) -->
                    <HorizontalScrollView
                        android:id="@+id/pronunciationHeaderScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:scrollbarThumbHorizontal="@drawable/custom_scroll_thumb"
                        android:scrollbarSize="5dp"
                        android:fadeScrollbars="false">

                        <TableLayout
                            android:id="@+id/pronunciationResultsTableHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:padding="2dp"
                            android:background="@android:color/transparent" />
                    </HorizontalScrollView>

                    <!-- Contenido con scroll vertical -->
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:scrollbarThumbVertical="@drawable/custom_scroll_thumb"
                        android:scrollbarSize="3dp"
                        android:fadeScrollbars="false">

                        <HorizontalScrollView
                            android:id="@+id/pronunciationContentScrollView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:scrollbarThumbHorizontal="@drawable/custom_scroll_thumb"
                            android:scrollbarSize="3dp"
                            android:fadeScrollbars="false">

                            <TableLayout
                                android:id="@+id/pronunciationResultsTable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:stretchColumns="*"
                                android:padding="2dp"
                                android:background="@android:color/transparent" />
                        </HorizontalScrollView>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </FrameLayout>

                <LinearLayout
                    android:id="@+id/detailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_large"
                android:paddingBottom="60dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="125dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_0" />

                    <ImageView
                        android:id="@+id/homeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="145dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/home0" />

                    <ImageView
                        android:id="@+id/imgBirdMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bird0_menu" />

                    <ImageView
                        android:id="@+id/imgQuizMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="60dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/quiz0_menu"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/imgPronunMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="255dp"
                        android:layout_marginTop="60dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pronun0_menu"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/btnProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="145dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/profile" />

                </FrameLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/birdImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/finalScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/summaryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¡Excelente trabajo!\n\nTema: Days of the Week\nNivel: A1.1\n\nPreguntas aprobadas: 9 de 10\n(70% requerido para aprobar)"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btnBackToMap"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_standard"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ—ºï¸ Volver al Mapa"
                android:textColor="@color/primary_color"
                android:background="@drawable/button_outline"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btnRetry"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_standard"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ”„ Reintentar"
                android:textColor="@color/primary_color"
                android:background="@drawable/button_outline"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>