<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Header con botón de retorno -->
            <LinearLayout
                android:id="@+id/returnContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="start">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back"
                    android:contentDescription="@string/return_button"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Contenido principal con imagen de fondo -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Imagen de fondo superior -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/nube"
                    android:adjustViewBounds="true" />

                <!-- Contenido superpuesto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:padding="30dp">

                    <!-- Imagen del tiburón flotante -->
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sharkwelcom"
                        android:layout_marginBottom="-40dp"
                        android:elevation="2dp"/>

                    <!-- Card con fondo azul -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="8dp"
                            app:cardBackgroundColor="#0D7C9E">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="24dp"
                                android:paddingTop="60dp">

                                <!-- Texto de pregunta -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="¿Quieres empezar desde 0 o hacer una prueba de conocimiento para evaluar tu nivel de inglés?"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="15dp"
                                    android:textSize="22sp"
                                    android:gravity="center"
                                    android:lineSpacingExtra="4dp"
                                    android:layout_marginBottom="20dp"/>

                                <!-- Botones -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:weightSum="2">

                                    <Button
                                        android:id="@+id/eButtonBegin"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="@dimen/spacing_xs"
                                        android:text="From 0"
                                        android:textSize="@dimen/text_size_small"
                                        android:backgroundTint="#00AA00"
                                        android:textColor="@color/white"
                                        android:minHeight="@dimen/min_touch_target"
                                        android:paddingTop="12dp"
                                        android:paddingBottom="12dp"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:maxLines="3"
                                        android:ellipsize="none" />

                                    <Button
                                        android:id="@+id/eButtonTest"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="@dimen/spacing_xs"
                                        android:text="Test level"
                                        android:textSize="@dimen/text_size_small"
                                        android:backgroundTint="#FF0E32"
                                        android:textColor="@color/white"
                                        android:minHeight="@dimen/min_touch_target"
                                        android:paddingTop="12dp"
                                        android:paddingBottom="12dp"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:maxLines="3"
                                        android:ellipsize="none" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <!-- Imagen de olas en la parte inferior -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/olas_pie"
                    android:adjustViewBounds="true"
                    android:layout_gravity="bottom" />

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>