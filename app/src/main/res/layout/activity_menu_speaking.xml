<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuSpeakingActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="800dp"
            android:orientation="vertical"
            android:background="#FFD5FD"
            android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#008CB9"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_medium">

            <LinearLayout
                android:id="@+id/eBtnReturnMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:background="#008CB9"
                android:padding="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/back"
                    android:contentDescription="@string/return_menu"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/return_button"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Badge de Modo Libre (Speaking) con bot贸n desactivar -->
            <LinearLayout
                android:id="@+id/freeRoamContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#FFD5FD"
                android:visibility="gone">

                <TextView
                    android:id="@+id/freeRoamBadge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modo libre: Speaking sin secuencia"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnDisableFreeRoam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desactivar"
                    android:textSize="12sp"
                    android:backgroundTint="#FF5252"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

            <!-- Mapa principal de speaking con elementos superpuestos - RESPONSIVE -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="600dp">

                <!-- Mapa de fondo (reutilizamos map_a1 pero con fondo morado) -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dolphin_map_a1"
                    android:adjustViewBounds="true"
                    android:alpha="0.8" />

                <!-- Bot贸n Start Speaking - Posici贸n responsive -->
                <ImageView
                    android:id="@+id/eButtonStartSpeaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="160dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/start"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <!-- Elementos que aparecen con animaci贸n - Speaking Start Group -->
                <!-- Speaking ABC - Arriba del Start -->
                <ImageView
                    android:id="@+id/imgSpeakingABC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="160dp"
                    android:layout_marginTop="180dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/abc"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <!-- Speaking Numbers - Derecha del Start -->
                <ImageView
                    android:id="@+id/imgSpeakingNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="113dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/numbers"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <!-- Speaking Colors - Abajo del Start -->
                <ImageView
                    android:id="@+id/imgSpeakingColors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="180dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/colors"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <!-- Speaking Pronouns - Diagonal superior derecha del Start -->
                <ImageView
                    android:id="@+id/imgSpeakingPronouns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="58dp"
                    android:layout_marginTop="240dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pronouns"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <!-- Speaking Possessive - Diagonal inferior derecha del Start -->
                <ImageView
                    android:id="@+id/imgSpeakingPossessive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="130dp"
                    android:layout_marginTop="240dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/possesive"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <!-- Map Icon 2 Speaking - Trigger para segundo grupo -->
                <ImageView
                    android:id="@+id/imgIcMap2Speaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="310dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_map2"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/map_blocked_2Speaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="310dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_blocked"
                    android:visibility="gone" />

                <!-- Elementos del segundo grupo de speaking -->
                <ImageView
                    android:id="@+id/imgSpeakingPrepos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="44dp"
                    android:layout_marginTop="330dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/prepositions"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/imgSpeakingAdjectives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="14dp"
                    android:layout_marginTop="330dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/adjectives"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/IcMap3Speaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="480dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_map3"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/map_blocked_3Speaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="480dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_blocked"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgOrdinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="450dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ordinal"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/imgVerb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="540dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/verb_to_be"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/IcMap4Speaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="648dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_map4"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/map_blocked_4Speaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="648dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_blocked"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgDaile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="600dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/daily_routines"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/imgVerbNear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="725dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/verb_near"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="810dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_map5" />

                <ImageView
                    android:id="@+id/map_blocked_5Speaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="810dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_blocked"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="120dp"
                    android:layout_marginTop="980dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_map6" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="120dp"
                    android:layout_marginTop="980dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_blocked"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="1145dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_map7" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="1145dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_blocked"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_large"
                android:paddingBottom="60dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="125dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_0" />

                    <ImageView
                        android:id="@+id/homeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="145dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/home0" />

                    <ImageView
                        android:id="@+id/imgBirdMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bird0_menu" />

                    <ImageView
                        android:id="@+id/imgQuizMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="60dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/quiz0_menu"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/imgPronunHistoryMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="270dp"
                        android:layout_marginTop="60dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pronun0_menu"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/btnProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="145dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/profile" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 