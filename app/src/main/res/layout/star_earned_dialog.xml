<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:clipToOutline="true"
    android:background="@drawable/gradient_background_round"
    android:padding="32dp">

    <!-- Icono de estrella más grande -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/points"
        android:scaleType="fitCenter"
        android:layout_marginBottom="24dp" />

    <!-- Título con mejor jerarquía -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Has ganado una estrella!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFB800"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Mensaje motivacional con mejor contraste -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Vas bien! Sigue así"
        android:textSize="16sp"
        android:textColor="#00487E"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Botón moderno con MaterialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCloseStarDialog"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="¡Genial!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:backgroundTint="#00AA00"
        app:cornerRadius="28dp" />

</LinearLayout>