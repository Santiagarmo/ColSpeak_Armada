<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradiente de fondo -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#06719E"
        android:centerColor="#008CB9"
        android:endColor="#008CB9"
        />

    <!-- Bordes redondeados -->
    <corners android:radius="24dp" />

    <!-- Sombra o borde opcional -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>
